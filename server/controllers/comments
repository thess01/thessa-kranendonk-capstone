const knex = require('knex')(require("../knexfile").development);


exports.getOne = (req, res) => {
    const commentId = req.params.id;

    knex("comments")
    .where({id: commentId})
    .then(data => {
        if(!data.length) {
            return res.status(404).json({
                message: "Comment does not exist"
            })
        }
        res.json(data[0]);
    })
}